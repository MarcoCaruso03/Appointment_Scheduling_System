<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../medical_theme.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unicas.clinic.address.view.staff.StaffManagementLayoutController">
   <children>
      <Pane prefHeight="38.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="16.0" fitWidth="15.0" layoutX="462.0" layoutY="12.0" onMouseClicked="#handleFilter" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../resources/search.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="26.0" fitWidth="25.0" layoutX="14.0" layoutY="7.0" onMouseClicked="#handleBack" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../../resources/house_icon.png" />
               </image>
            </ImageView>
            <TextField fx:id="staffName" alignment="CENTER" layoutX="108.0" layoutY="7.0" prefHeight="25.0" prefWidth="142.0" promptText="Staff Name" />
            <TextField fx:id="staffSurname" alignment="CENTER" layoutX="279.0" layoutY="7.0" promptText="Staff Surname" />
         </children>
      </Pane>
      <TableView fx:id="staffTable" layoutX="-2.0" layoutY="39.0" prefHeight="314.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="surnameColumn" prefWidth="75.0" text="Surname" />
            <TableColumn fx:id="specColumn" prefWidth="75.0" text="Speciality" />
            <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <ButtonBar layoutY="351.0" prefHeight="50.0" prefWidth="600.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#handleInsertStaff" text="Insert New Member" />
            <Button mnemonicParsing="false" onAction="#handleUpdateStaff" prefHeight="26.0" prefWidth="408.0" text="Update a Member" />
            <Button mnemonicParsing="false" onAction="#handleDeleteStaff" prefHeight="26.0" text="Delete a Member" />
            <Button mnemonicParsing="false" onAction="#handleSchedule" text="Schedule" />
        </buttons>
         <padding>
            <Insets right="20.0" />
         </padding>
      </ButtonBar>
   </children>
</AnchorPane>
